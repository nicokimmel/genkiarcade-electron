<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>de.nicokimmel.shadowcast-electron</id>
  <name>shadowcast-electron</name>
  <developer_name>Nico Kimmel</developer_name>
  <url type="homepage">https://github.com/nicokimmel/shadowcast-electron</url>
  <summary>Shows the videostream of ShadowCast by Genki</summary>
  <description>
    <p>This app is an alternative to the Windows and MacOS only versions of Genki Arcade.
        It shows the output of the capture card and has a very minimalistic design.</p>
    <p>Note: You need a ShadowCast by Genki to really use this application.</p>
  </description>
  <categories>
    <category>Game</category>
    <category>Utility</category>
  </categories>
  <keywords>
    <keyword translate="no">ShadowCast</keyword>
    <keyword translate="no">Genki</keyword>
    <keyword translate="no">Nintendo</keyword>
    <keyword translate="no">Switch</keyword>
  </keywords>
